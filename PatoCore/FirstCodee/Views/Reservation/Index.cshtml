@model EntityLayer.Concrete.ViewModels.HourCapacityViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Title Page -->
<section class="bg-title-page flex-c-m p-t-160 p-b-80 p-l-15 p-r-15" style="background-image: url(/pato-master/images/bg-title-page-02.jpg);">
    <h2 class="tit6 t-center">
        Rezervasyon
    </h2>
</section>


<!-- Reservation -->
<section class="section-reservation bg1-pattern p-t-100 p-b-113">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-b-30">
                <div class="t-center">
                    <span class="tit2 t-center">
                        Hemen Masanızı Ayarlayalım
                    </span>

                    <h3 class="tit3 t-center m-b-35 m-t-2">
                        Rezervasyon
                    </h3>
                </div>

                <form asp-action="Index" asp-controller="Reservation" method="post" class="wrap-form-reservation size22 m-l-r-auto">
                    <div class="row">
                        <div class="col-md-4">
                            <!-- Date -->
                            <span class="txt9">
                                Tarih
                            </span>

                            <div class="wrap-inputdate pos-relative txt10 size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <input asp-for="@Model.Reservation.Date" class="my-calendar bo-rad-10 sizefull txt10 p-l-20" value="@DateTime.Now" type="text">
                                <i class="btn-calendar fa fa-calendar ab-r-m hov-pointer m-r-18" aria-hidden="true"></i>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Time -->
                            <span class="txt9">
                                Saat
                            </span>

                            <div class="wrap-inputtime size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <!-- Select2 -->
                                <select asp-for="Reservation.rHoursID" class="selection-1">
                                    @foreach (var item in Model.Hours)
                                    {
                                        <option value="@item.ID">@item.Hour</option>
                                    }
                                </select>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <!-- People -->
                            <span class="txt9">
                                Kişi Sayısı
                            </span>

                            <div class="wrap-inputpeople size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <!-- Select2 -->
                                <select asp-for="Reservation.rCapacityID" class="selection-1">

                                    @foreach (var item in Model.Capacities)
                                    {
                                        <option value="@item.ID">@item.Capacity</option>
                                    }

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <!-- Name -->
                            <span class="txt9">
                                Ad Soyad
                            </span>

                            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <input asp-for="@Model.Reservation.Name" class="bo-rad-10 sizefull txt10 p-l-20" type="text" placeholder="Adınızı ve soyadınızı giriniz">
                                <div class="text-danger text-sm ms-2">
                                    @Html.ValidationMessageFor(x => x.Reservation.Name)
                                </div>
                            </div>
                          
                        </div>

                        <div class="col-md-4">
                            <!-- Phone -->
                            <span class="txt9">
                                Telefon
                            </span>

                            <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <input asp-for="@Model.Reservation.Phone" class="bo-rad-10 sizefull txt10 p-l-20" type="text" placeholder="Telefon numaranızı giriniz">
                                <div class="text-danger text-sm ms-2">
                                    @Html.ValidationMessageFor(x => x.Reservation.Phone)
                                </div>
                            </div>
                          
                        </div>

                        <div class="col-md-4">
                            <!-- Email -->
                            <span class="txt9">
                                Mail
                            </span>

                            <div class="wrap-inputemail size12 bo2 bo-rad-10 m-t-3 m-b-23">
                                <input asp-for="@Model.Reservation.Mail" class="bo-rad-10 sizefull txt10 p-l-20" type="email" placeholder="Email'inizi giriniz'">
                                <div class="text-danger text-sm ms-2">
                                    @Html.ValidationMessageFor(x => x.Reservation.Mail)
                                </div>
                            </div>
                          
                        </div>

                    </div>

                    <div class="wrap-btn-booking flex-c-m m-t-6">
                        <!-- Button3 -->
                        <button type="submit" class="btn3 flex-c-m size13 txt11 trans-0-4">
                            Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="info-reservation flex-w p-t-80">
            <div class="size23 w-full-md p-t-40 p-r-30 p-r-0-md">
                <h4 class="txt5 m-b-18">
                    Reserve by Phone
                </h4>

                <p class="size25">
                    Donec quis euismod purus. Donec feugiat ligula rhoncus, varius nisl sed, tincidunt lectus.
                    <span class="txt25">Nulla vulputate</span>
                    , lectus vel volutpat efficitur, orci
                    <span class="txt25">lacus sodales</span>
                    sem, sit amet quam:
                    <span class="txt24">(001) 345 6889</span>
                </p>
            </div>

            <div class="size24 w-full-md p-t-40">
                <h4 class="txt5 m-b-18">
                    For Event Booking
                </h4>

                <p class="size26">
                    Donec feugiat ligula rhoncus:
                    <span class="txt24">(001) 345 6889</span>
                    , varius nisl sed, tinci-dunt lectus sodales sem.
                </p>
            </div>

        </div>
    </div>
</section>





